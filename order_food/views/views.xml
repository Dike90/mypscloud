<odoo>
  <data>

    <record model="ir.ui.view" id="order_food.list">
      <field name="name">order_food list</field>
      <field name="model">order_food.food_menu</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name">
          <field name="menu_date"/>
          <field name="food_ids"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="order_food.action_window">
      <field name="name">order_food window</field>
      <field name="res_model">order_food.food_menu</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="order_food" id="order_food.menu_root"/>

    <!-- menu categories -->

    <menuitem name="菜谱" id="order_food.food_menu" parent="order_food.menu_root"/>
    <menuitem name="订餐" id="order_food.order_food" parent="order_food.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="order_food.menu_1_list" parent="order_food.food_menu"
              action="order_food.action_window"/>


  </data>
</odoo>